							</li>
						</ol>
					</nav>
					<h2 class="breadcrumb-title">Liste des Réclamation
					</h2>
				</div>

			</div>
		</div>
	</div>

	<div class="page-wrapper">
		<div class="content container-fluid">
			<div class="row">
				<div class="col-sm-12">
					<div class="card">
						<div class="card-body">
							<div class="table-responsive">
								<div
									id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
									<!-- Invoice Table -->
									<div class="table-responsive">
										<table class="table table-hover table-center mb-0">
											<thead>
												<tr>
													<th>ID</th>
													<th>Sujet</th>
													<th>description</th>
													<th>date</th>
													<!--	<th>Etat</th>-->
													<th></th>
												</tr>
											</thead>
											<tbody>
												<tr>
													{% for reclamation in reclamation %}
