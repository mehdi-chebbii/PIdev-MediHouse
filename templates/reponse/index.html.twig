{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}


    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_user</th>
                <th>Question</th>
                <th>Date_pub</th>
                <th>categorie</th>
                <th>actions</th>
            </tr>
        </thead>
            <h1>Questions</h1>
<a href="{{ path('ad') }}">
  <button class="btn btn-primary rounded-pill float-right"
          style="background: linear-gradient(to bottom right, #36D1DC, #5B86E5);">
    <i class="fas fa-chart-bar mr-2"></i> Statistiques
  </button>
</a>

        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.idUser }}</td>
                <td>{{ question.question }}</td>
                <td>{{ question.datePub ? question.datePub|date('Y-m-d') : '' }}</td>
                <td>{{ question.categorie }}</td>
              
                <td>
 <div class="button-group">
  <a href="{{ path('app_question_show', {'id': question.id}) }}"><button class="btn btn-primary">detail</button></a>
  <form method="post" action="{{ path('delete', {'id': question.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
    <button class="btn btn-danger delete"
>supprimer</button>
  </form>
</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">pas de reponses</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    
{% endblock %}
